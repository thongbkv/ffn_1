<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "admin.season.list_season" %></h2>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "admin.season.name" %></th>
        <th><%= t "admin.season.description" %></th>
        <th><%= t "admin.season.number_of_team" %></th>
        <th><%= t "admin.season.number_of_match" %></th>
        <th><%= t "admin.season.update" %></th>
        <th><%= t "admin.season.delete" %></th>
      </thead>
      <tbody>
        <% @seasons.each do |season| %>
          <tr>
            <td><%= season.name %></td>
            <td><%= season.description %></td>
            <td><%= season.season_teams.count %></td>
            <td><%= season.matches.count %></td>
            <td>
              <%= link_to [:edit, :admin, season], class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> 
                <%= t "admin.season.edit_season" %>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, season], method: :delete, data: {confirm: t("admin.season.sure")},
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.season.destroy" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_admin_season_path, class: "btn btn-primary btn-xs" do %>
      <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.season.new_season" %>
    <% end %>
  </div>
</div>
